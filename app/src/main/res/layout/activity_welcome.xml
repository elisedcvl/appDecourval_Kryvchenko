<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background= "@color/couleurFond"
    tools:context="com.example.elise.appdecourval_kryvchenko.WelcomeActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mode Predefined Route "
        android:id="@+id/PredefinedRouteButton"
        android:layout_above="@+id/FreeTrailButton"
        android:layout_marginBottom="50dp"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:background= "@color/greyButton"
        android:textColor="@color/white"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mode Free Trail"
        android:id="@+id/FreeTrailButton"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/PredefinedRouteButton"
        android:layout_alignEnd="@+id/PredefinedRouteButton"
        android:layout_alignLeft="@+id/PredefinedRouteButton"
        android:layout_alignStart="@+id/PredefinedRouteButton"
        android:background= "@color/greyButton"
        android:textColor="@color/white"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modify my profile"
        android:id="@+id/ProfileButton"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/FreeTrailButton"
        android:layout_alignRight="@+id/FreeTrailButton"
        android:layout_alignEnd="@+id/FreeTrailButton"
        android:background= "@color/black"
        android:textColor="@color/white"
        android:layout_alignLeft="@+id/FreeTrailButton"
        android:layout_alignStart="@+id/FreeTrailButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="I hope you are ready !"
        android:id="@+id/textView8"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/writing"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="You will be able to start your training ! "
        android:id="@+id/textView7"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:textColor="@color/writing"
        />
</RelativeLayout>
